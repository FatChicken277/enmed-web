---
import "@/styles/global.css";
import { SEO } from "astro-seo";

import { ClientRouter } from "astro:transitions";

import Header from "../components/layout/Header.astro";

const { title } = Astro.props;

const seoConfig = {
  title: "Enmed - Web oficial de noticias, eventos, difusión, produccion",
  description:
    "Enmed es el colectivo urbano mas grande de Medellín que impulsa nuevos talentos de la escena urbana en Colombia. Descubre noticias, eventos y el impacto cultural del movimiento urbano.",
  canonical: "https://enmed.pages.dev",
  extend: {
    meta: [
      {
        name: "author",
        content: "FatChicken277",
      },
      {
        name: "publisher",
        content: "FatChicken277",
      },
      {
        name: "keywords",
        content:
          "Enmed, Medellín, Colombia, Música urbana, Festival, Nuevos Talentos, Comunidad Urbana, Musica, Noticias, Evento, Musica urbana, Cultura",
      },
    ],
  },
};
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Enmed - {title}</title>

    <SEO {...seoConfig} />

    <link rel="sitemap" href="/sitemap-index.xml" />

    <ClientRouter />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <footer></footer>
  </body>
</html>
